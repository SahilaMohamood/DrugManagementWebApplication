@model IEnumerable<DrugManagementWebApp.Models.UsageConditionDrug>

@{
    ViewData["Title"] = "Index";
    PagerModel pager = ViewBag.Pager;
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CondtnDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondtnDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CondtnDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CondtnDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UsageConditionDrugId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UsageConditionDrugId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UsageConditionDrugId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>
