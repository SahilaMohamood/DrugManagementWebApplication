@model IEnumerable<DrugManagementWebApp.Models.Drug>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrugShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugLongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChemicalAnalysis)
