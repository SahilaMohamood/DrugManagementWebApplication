            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugLongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChemicalAnalysis)
